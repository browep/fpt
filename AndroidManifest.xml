<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.browep.fpt"
          android:versionCode="1"
          android:versionName="1.0">
    <application android:name=".FptApp"
                 android:label="Simple Workout Tracker" android:icon="@drawable/swt_72_72" android:debuggable="true"
            >
        <uses-permission android:name="android.permission.INTERNET"/>

        <activity android:name="Welcome"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="CreateWorkout"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
        </activity>
        <activity android:name=".WorkoutDefinitionForm"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
        </activity>
        <activity android:name=".EnterDataChooser"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
        </activity>
        <activity android:name=".EnterData"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
        </activity>
        <activity android:name=".SeeProgressChooser"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
        </activity>
        <activity android:name=".ViewProgress"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                >
        </activity>
        <activity android:name=".SeePictures"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                >
        </activity>

        <activity android:name=".TakeProgressPicture"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"

                ></activity>
        <activity android:name=".EditData"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"

                >

        </activity>
    </application>
</manifest> 
